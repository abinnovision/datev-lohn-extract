{
	"name": "@internal/datev-lohn-extract-cli",
	"version": "0.0.0",
	"description": "Command-line interface for DATEV PDF salary statement processing",
	"type": "module",
	"private": true,
	"bin": {
		"datev-splitter": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"clean": "rm -rf dist",
		"lint:check": "eslint '{{src,test}/**/*,*}.{js,ts}'",
		"lint:fix": "eslint '{{src,test}/**/*,*}.{js,ts}' --fix",
		"format:check": "prettier --check '{{src,test}/**/*,*}.{js,ts,json,json5,yml,yaml,md}'",
		"format:fix": "prettier --write '{{src,test}/**/*,*}.{js,ts,json,json5,yml,yaml,md}'",
		"test-unit": "vitest --run",
		"test-unit:watch": "vitest --watch"
	},
	"dependencies": {
		"@internal/datev-lohn-extract-core": "workspace:^",
		"commander": "^12.1.0"
	},
	"devDependencies": {
		"@abinnovision/eslint-config-base": "^2.2.0",
		"@abinnovision/eslint-config-typescript": "^2.2.1",
		"@types/node": "^24.8.1",
		"eslint": "^9.38.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"vitest": "^3.0.0"
	},
	"prettier": "@abinnovision/prettier-config",
	"lint-staged": {
		"src/**/*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{js,ts,json,json5,yaml,yml,md}": [
			"prettier --write"
		]
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
