{
	"name": "@internal/root",
	"version": "0.0.0",
	"private": true,
	"description": "Monorepo for DATEV Lohn extraction tools",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"check": "yarn format:check && turbo lint:check && turbo format:check",
		"clean": "turbo clean && rm -rf .turbo",
		"dev": "turbo watch start:dev",
		"fix": "yarn format:fix && turbo lint:fix && turbo format:fix",
		"format:check": "prettier --check '{.github/**/*,*}.{json,json5,yaml,yml,md}'",
		"format:fix": "prettier --write '{.github/**/*,*}.{json,json5,yaml,yml,md}'",
		"postinstall": "husky",
		"test": "vitest --run --coverage --project \\*#unit",
		"test:watch": "vitest --watch"
	},
	"commitlint": {
		"extends": [
			"@abinnovision/commitlint-config"
		]
	},
	"lint-staged": {
		"{.github/**/*,*}.{json,json5,yaml,yml,md}": [
			"prettier --write"
		],
		"**/package.json": [
			"sort-package-json"
		]
	},
	"prettier": "@abinnovision/prettier-config",
	"devDependencies": {
		"@abinnovision/commitlint-config": "^2.2.1",
		"@abinnovision/prettier-config": "^2.1.3",
		"@commitlint/cli": "^20.1.0",
		"@types/node": "^24.8.1",
		"@vitest/coverage-v8": "^3.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"prettier": "^3.6.2",
		"sort-package-json": "^3.4.0",
		"turbo": "^2.3.3",
		"vitest": "^3.0.0"
	},
	"packageManager": "yarn@4.10.3",
	"engines": {
		"node": ">=18.0.0"
	}
}
